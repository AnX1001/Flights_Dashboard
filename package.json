{
  "name": "flight-board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,md}\"",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.1.6",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.14.9",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.9",
    "typescript": "5.5"
  },
  "lint-staged": {
    "*.{ts,tsx,css,scss,js,html}": [
      "echo 'Run staged test if they exists...' && npm run test -- --passWithNoTests",
      "echo 'Run Next lint...' && eslint",
      "echo 'Format staged files with prettier...' && prettier --write"
    ]
  }
}
